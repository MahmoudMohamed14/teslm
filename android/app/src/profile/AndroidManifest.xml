<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- INTERNET permission for Flutter development (e.g., for hot reload) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Permission for recording audio -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Optional: Modify audio settings (e.g., for bluetooth headsets) -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Permissions for accessing and saving files in external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- For Android 11 and above (Scoped Storage) -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

</manifest>
